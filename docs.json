{
  "openapi": "3.0.0",
  "host": "https://docs.crustplay.com",
  "info": {
    "title": "FanCrew - API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://fantasy.crustplay.com",
      "description": "Development Server"
    }
  ],
  "apis": [
    "Routes/*.js",
    "Models/*.js",
    "Controllers/*.js",
    "Services/*.js"
  ],
  "paths": {
    "/user": {
      "get": {
        "tags": [
          "User"
        ],
        "description": "Get Current User",
        "security": [
          "Bearer"
        ],
        "responses": {
          "200": {
            "description": "ok",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "User"
        ],
        "description": "Creates a New User Account",
        "summary": "Create New User",
        "requestBody": {
          "$ref": "#/components/requestBodies/createUser"
        },
        "responses": {
          "200": {
            "description": "ok",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "422": {
            "description": "ValidationError",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "errors": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/matches": {
      "get": {
        "tags": [
          "User"
        ],
        "description": "Get My Matches",
        "summary": "Get My Matches",
        "security": [
          "Bearer"
        ],
        "responses": {
          "200": {
            "description": "ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Match"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/{id}": {
      "get": {
        "tags": [
          "User"
        ],
        "description": "Get Single User",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "The user id"
          }
        ],
        "responses": {
          "200": {
            "description": "ok",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Login to account",
        "description": "Login to account",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Contest": {
        "type": "object",
        "properties": {
          "match": {
            "type": "string"
          },
          "prize_pool": {
            "type": "number"
          },
          "fee": {
            "type": "number"
          },
          "max_spots": {
            "type": "number"
          },
          "min_spots": {
            "type": "number"
          },
          "max_entries": {
            "type": "number"
          },
          "distributions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "rank": {
                  "type": "string"
                },
                "prize": {
                  "type": "number"
                },
                "isRange": {
                  "type": "boolean"
                }
              }
            }
          },
          "teams": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Team"
            }
          }
        }
      },
      "Player": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "game": {
            "type": "number"
          },
          "team_name": {
            "type": "string"
          },
          "role": {
            "type": "string"
          },
          "logo": {
            "type": "string"
          },
          "rating": {
            "type": "number"
          },
          "points": {
            "type": "number"
          }
        }
      },
      "Team": {
        "type": "object",
        "properties": {
          "user": {
            "type": "string"
          },
          "match": {
            "type": "string"
          },
          "contest": {
            "type": "string"
          },
          "players": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "player": {
                  "type": "string"
                },
                "points": {
                  "type": "number"
                }
              }
            }
          },
          "captain": {
            "type": "string"
          },
          "vice_captain": {
            "type": "string"
          },
          "points": {
            "type": "number"
          },
          "rank": {
            "type": "number"
          },
          "prize": {
            "type": "number"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "phoneNumber": {
            "type": "string"
          },
          "image": {
            "type": "string"
          },
          "region": {
            "type": "string"
          },
          "verified": {
            "type": "boolean"
          },
          "balance": {
            "type": "number"
          },
          "notifications": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "content": {
                "type": "string"
              },
              "viewed": {
                "type": "string"
              },
              "createdAt": {
                "type": "string",
                "format": "date-time"
              }
            }
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          },
          "meta": {
            "type": "object",
            "properties": {
              "contests": {
                "type": "number"
              },
              "matches": {
                "type": "number"
              },
              "earnings": {
                "type": "number"
              }
            }
          },
          "staff": {
            "type": "boolean"
          },
          "manager": {
            "type": "boolean"
          },
          "admin": {
            "type": "boolean"
          }
        }
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  },
  "tags": []
}